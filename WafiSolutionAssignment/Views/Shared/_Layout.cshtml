<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    @* <title>@ViewData["Title"] - WafiSolutionAssignment</title> *@
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/WafiSolutionAssignment.styles.css" asp-append-version="true" />

    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">

    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/toastr.js/latest/css/toastr.min.css" />
    <link rel="stylesheet" href="https://DataTables/datatables.css" />

    <link rel="stylesheet" href="https://cdn.datatables.net/v/dt/dt-2.0.8/datatables.min.css">
    <link href="~/datatables/datatables.min.css" rel="stylesheet" />
    <link href="~/datatables/datatables.css" rel="stylesheet" />
    <link rel="stylesheet" type="text/css" href="https://cdn.datatables.net/1.11.5/css/jquery.dataTables.min.css">

    <link rel="stylesheet" href="https://cdn.datatables.net/2.1.2/css/dataTables.dataTables.css" />
    <style>
        body {
            display: flex;
            height: 100vh;
            margin: 0;
        }

        /* Sidebar styling */
        .sidebar {
            width: 250px;
            background-color: #f8f9fa;
            border-right: 1px solid #dee2e6;
            padding: 20px;
            height: 100vh;
        }

            .sidebar .nav-link {
                display: block;
                padding: 10px;
                color: #333;
                text-decoration: none;
            }

                .sidebar .nav-link:hover {
                    background-color: #007bff;
                    color: white;
                }

            .sidebar .nav-item.active .nav-link {
                font-weight: bold;
                color: #007bff;
            }

        /* Content area styling */
        .content {
            flex-grow: 1;
            padding: 20px;
        }

        /* Footer positioning */
        footer {
            position: fixed;
            bottom: 0;
            width: 100%;
            background-color: #f8f9fa;
            border-top: 1px solid #dee2e6;
            padding: 10px;
            text-align: center;
        }
    </style>
</head>
<body>
    <div class="sidebar">
        <h4>WafiSolutionAssignment</h4>
        <ul class="nav flex-column">
            <li class="nav-item @(Context.Request.Path.StartsWithSegments("/Home/Index") ? "active" : "")">
                <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Index">Home</a>
            </li>
            <li class="nav-item @(Context.Request.Path.StartsWithSegments("/Employee/Index") ? "active" : "")">
                <a class="nav-link text-dark" asp-area="" asp-controller="Employee" asp-action="Index">Employee</a>
            </li>

            <li class="nav-item @(Context.Request.Path.StartsWithSegments("/Employee/Create") ? "active" : "")">
                <a class="nav-link text-dark" asp-area="" asp-controller="Employee" asp-action="Create">Add Employee</a>
            </li>
        </ul>
    </div>

    <div class="content">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="footer text-muted">
        <div class="container">
            @* &copy; 2024 - WafiSolutionAssignment - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a> *@
        </div>
    </footer>

    <script src="~/datatables/datatables.min.js"></script>
    <script src="~/datatables/datatables.js"></script>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <script src="https://DataTables/datatables.js"></script>

    <script src="https://cdn.datatables.net/2.1.2/js/dataTables.js"></script>
    <script src="https://cdn.datatables.net/v/dt/dt-2.0.8/datatables.min.js" asp-append-version="true"></script>
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="https://cdn.datatables.net/1.11.5/js/jquery.dataTables.min.js"></script>

    @await RenderSectionAsync("Scripts", required: false)

    <script>
        $(document).ready(function () {
            $('.nav-item').each(function () {
                var link = $(this).find('.nav-link');
                if (link.attr('href') === window.location.pathname) {
                    $(this).addClass('active');
                }
            });
        });
    </script>
</body>
</html>
