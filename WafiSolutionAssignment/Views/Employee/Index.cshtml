@model EmployeeSearchModel


<div class="card-body p-4">
    <form id="searchForm" method="post" class="row">
        <div class="">

            <div class="">
                <label asp-for="Name" class="p-0"></label>
                <input id="name" asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>

            <div class="">
                <label asp-for="DateOfBirth" class="p-0"></label>
                <input id="dob" asp-for="DateOfBirth" class="form-control" />
                <span asp-validation-for="DateOfBirth" class="text-danger"></span>
            </div>

            <div class="">
                <label asp-for="Email" class="p-0"></label>
                <input id="email" asp-for="Email" class="form-control" />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>


            <div class="">
                <label asp-for="MobileNumber" class="p-0"></label>
                <input id="mobile" asp-for="MobileNumber" class="form-control" />
                <span asp-validation-for="MobileNumber" class="text-danger"></span>
            </div>


            <div class="" pt-2>
                <div class="col-6 col-md-3">
                    <button id="searchButton" type="submit" class="btn btn-primary form-control">Search</button>
                </div>
            </div>

        </div>

    </form>

</div>





<div class="container">
    <div class="row pt-4 pb-3">
        <div class="col-6">
            <h2 class="text-primary">Employee List</h2>
        </div>

        <div class="col-6 text-end">
            <a asp-controller="Employee" asp-action="Create" class="btn btn-primary">
                <i class="bi bi-bookmark-plus-fill"></i>Create New Employee
            </a>
        </div>

    </div>

    <table id="myTable1" class="table table-striped ">
        <thead>
            <tr>


                <th>Photo</th>
                <th>Full Name</th>
                <th>Email</th>
                <th>Mobile</th>
                <th>Date of Birth</th>
                <th>Action</th>

            </tr>
        </thead>

        <tbody>
        </tbody>
    </table>


</div>

@section Scripts{
    <script>
        $(document).ready(function () {
            // Initialize the datatable
            var table = $('#myTable1').DataTable({
                "columns": [
                    {
                        "data": "imageUrl", "render": function (data) {
                            return '<img src="' + data + '" alt="Photo" height="50"/>';
                        }
                    },
                    
                    { "data": "fullName" },
                    { "data": "email" },
                    { "data": "mobileNumber" },
                    {
                        "data": "dateOfBirth", "render": function (data) {
                            return new Date(data).toLocaleDateString();
                        }
                    },
                    {
                        "data": 'id',
                        render: function (data) {
                            return `<a href="/Employee/Edit/${data}" class="btn btn-primary">Edit</a>
                                <a href="/Employee/Delete/${data}" class="btn btn-danger">Delete</a>`;
                        }
                       
                    }
                ]
            });

            // Function to reload table data
            function reloadTableData(searchData) {
                $.ajax({
                    url: '@Url.Action("GetAll", "Employee")',
                    type: 'POST',
                    contentType: 'application/json',
                    data: JSON.stringify(searchData),
                    success: function (data) {
                        table.clear();
                        table.rows.add(data);
                        table.draw();
                    },
                    error: function (xhr, status, error) {
                        console.error("Error fetching data: " + error);
                    }
                });
            }

            // Handle form submission
            $('#searchForm').submit(function (e) {
                e.preventDefault();
                var searchData = {
                    Name: $('#name').val(),
                    DateOfBirth: $('#dob').val(),
                    MobileNumber: $('#mobile').val(),
                    Email: $('#email').val()
                };
                reloadTableData(searchData);
            });

            // Load initial data
            reloadTableData(null);
        });
    </script>

}
