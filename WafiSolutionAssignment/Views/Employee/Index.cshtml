        $('#searchForm').submit(function (event) {
            event.preventDefault(); // Prevent the default form submission

            var searchData = {
                Name: $('#name').val(),
                DateOfBirth: $('#dob').val(),
                Email: $('#email').val(),
                MobileNumber: $('#mobile').val()
            };

