@model EmployeeModel

<div class="card shadow border-0 mt-4">
    <div class="card-header bg-secondary bg-gradient m-lg-0 py-3">
        <div class="row">
            <div class="col-12 text-center">
                <h2 class="text-white py-3">
                    Delete Employee
                </h2>
            </div>
        </div>

    </div>



    <div class="card-body p-4">
        <form method="post" class="row" enctype="multipart/form-data">
            <div class="border p-3">
                @* <div asp-validation-summary="ModelOnly"> </div>*@
                <input asp-for="Id" hidden />
                <div class="row">
                    <div class="col-10">

                        <div class="mb-3 row p-1">
                            <label asp-for="FirstName" class="p-0"> </label>
                            <input asp-for="FirstName" readonly="readonly" class="form-control" />
                            <span asp-validation-for="FirstName" class="text-danger"></span>
                        </div>

                        <div class="mb-3 row p-1">
                            <label asp-for="LastName" class="p-0"> </label>
                            <input asp-for="LastName" readonly="readonly" class="form-control" />
                            <span asp-validation-for="LastName" class="text-danger"></span>
                        </div>

                        <div class="mb-3 row p-1">
                            <label asp-for="Email" class="p-0"> </label>
                            <input asp-for="Email" readonly="readonly" class="form-control" />
                            <span asp-validation-for="Email" class="text-danger"></span>
                        </div>

                        <div class="mb-3 row p-1">
                            <label asp-for="MobileNumber" class="p-0"> </label>
                            <input asp-for="MobileNumber" readonly="readonly" class="form-control" />
                            <span asp-validation-for="MobileNumber" class="text-danger"></span>
                        </div>
                        <div class="mb-3 row p-1">
                            <label asp-for="DateOfBirth" class="p-0"> </label>
                            <input asp-for="DateOfBirth" readonly="readonly" class="form-control" />
                            <span asp-validation-for="DateOfBirth" class="text-danger"></span>
                        </div>


                        <div class="form-floating py-2 col-12">
                            <input asp-for="ImageUrl" readonly="readonly" type="file" name="file" class="form-control border-0 shadow" />
                            <label asp-for="ImageUrl" class="ms-2"></label>
                        </div>




                        <div class="row" pt-2>
                            <div class="col-6 col-md-3">
                                <button type="submit" class="btn btn-primary form-control">Delete</button>

                            </div>

                            <div class="col-6 col-md-3">
                                <a asp-controller="Employee" asp-action="Index" class="btn btn-outline-primary border form-control">
                                    Back to List
                                </a>
                            </div>
                        </div>

                    </div>

                    <div class="col-2">
                        <img src="@Model.ImageUrl" width="100%" style="border-radius:5px" />
                    </div>

                </div>


            </div>

        </form>

    </div>



</div>


 